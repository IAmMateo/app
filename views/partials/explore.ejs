<section class="explore narrow animated fadeIn">
	<div class="explore-block">
		<form class="explore-form" novalidate>
			<i class="font-icon search-icon icon"></i>
			<input type="search" class="fld search-collection-fld" placeholder="Inspiration, UI, Design, Web Development, Marketing, Photos" ng-model="searchTags" required autocomplete="off">
		</form>
	</div>

	<h2 class="featured-title">
		<span ng-if="!searching">Popular collections</span>
		<span ng-if="colls.length && searching">Search results for "{{searchTags}}"</span>
		<span ng-if="!colls.length && searching">Sorry, no collection found for "{{searchTags}}"</span>
	</h2>

	<ul class="profile-lists">
		<li class="coll-item coll{{$index}} clearfix"
			ng-repeat="coll in colls"
			ng-class="{last: $last}">

			<a ng-href="/u/{{coll.userData.name}}/{{coll._id}}" class="mask-link"></a>

			<div class="coll-book clearfix">
				<div class="coll-info left">
					<div ng-if="coll.userData" class="author">
						<img ng-src="{{coll.userData.avatar}}" class="avatar" avatar-load>
						<div class="curated truncate">
							<span>curated</span> by
							<a ng-href="/u/{{coll.userData.name}}">
								<span ng-if="!coll.owned">{{coll.userData.name}}</span>
								<span ng-if="coll.owned">you</span>
							</a>
						</div>
					</div>
					<h1 class="title">{{coll.title}}</h1>
					<div class="desc" ng-if="coll.description">{{coll.description}}</div>
					<div class="stat">
						<span class="followers" tooltip="Followers"><i class="font-icon people-icon icon"></i> {{kFormat(coll.followers.length) || 0}}</span>
						<span class="documents" tooltip="Documents"><i class="font-icon doc-icon icon"></i> {{kFormat(coll.count) || 0}}</span>
					</div>
				</div>

				<div class="profile-action right" ng-if="coll.owned">
					<a ng-href="/collections/{{coll._id}}" class="btn small-btn blue-btn edit-btn">View</a>
				</div>

				<div class="profile-action right" ng-if="!coll.owned">
					<button type="button" class="btn small-btn green-btn follow-btn" ng-if="!coll.mutual && !coll.processing" ng-click="followCollection(coll._id, $index)">Follow</button>
					<button type="button" class="btn small-btn pink-btn following-btn" ng-if="coll.mutual && !coll.processing" ng-click="unfollowCollection(coll._id, $index)">Unfollow</button>
				</div>
			</div>
			<ul class="backlists"><li></li><li></li></ul>
		</li>
	</ul>

	<div ng-hide="loaded || error" class="two-spin"></div>
</section>
