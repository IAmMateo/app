<!-- Share like dialog -->
<script type="text/ng-template" id="shareLikeDialog">
	<h2 class="bar">Share your favorite</h2>
	<div class="social-desc">Press Ctrl+C or Cmd+C to copy this link</div>
	<input id="likeUrl" class="fld" ng-model="link">
	<div class="social-share">
		<button type="button" class="btn big-btn fb-btn" share-on="facebook" share-on-event="share-like" share-on-text="{{link}}">Share on facebook</button>
		<button type="button" class="btn big-btn tw-btn" share-on="twitter" share-on-event="share-like" share-on-text="{{title}} on @{{service}} - {{link}}, shared via @likeastore ">Share on twitter</button>
	</div>
</script>

<!-- Invite friends dialog -->
<script type="text/ng-template" id="inviteDialogId">
	<h2>
		<i data-icon="w" class="icon"></i>
		 Invite your friends
	</h2>
	<form ng-submit="send()">
		<div class="send-error" ng-show="error">We are experiencing troubles, please try again later</div>
		<div>
			<input type="email" class="field" placeholder="Email" ng-model="email" required>
		</div>
		<div>
			<textarea class="field" rows="6" ng-model="message" required>
			</textarea>
		</div>
		<button type="submit" class="btn big-btn green-btn" ng-disabled="sendText == 'Sending'">{{sendText}}</button>
	</form>
	<div class="social-desc">Spread a word through social services</div>
	<div class="social-share">
		<button type="button" class="btn big-btn fb-btn" share-on-event="share-with-friend" share-on="facebook">Share on facebook</button>
		<button type="button" class="btn big-btn tw-btn" share-on-event="share-with-friend" share-on="twitter">Share on twitter</button>
	</div>
</script>

<!-- Delete account dialog -->
<script type="text/ng-template" id="deleteAccountDialog">
	<h2 class="bar">Delete account?</h2>
	<div class="tip">Unexpected bad things will happen unless you are not ABSOLUTELY sure.</div>
	<button type="button" ng-click="goBack()" class="btn pink-btn">No, thanks</button>
	<button type="button" ng-click="deleteAccount()" class="btn green-btn">Yes, please</button>
</script>

<!-- Dribbble connect dialog -->
<script type="text/ng-template" id="dribbbleConnect">
	<form ng-submit="turnOn()" novalidate>
		<img src="/img/dribbble-logo.png" class="dribbble-logo">
		<div class="ngdialog-message">
			<div class="info-text">Start to collect shots of your favourite designers.</div>
			<div class="dribbble-user" ng-show="dribbbleUser.avatar_url">
				<img ng-if="dribbbleUser.avatar_url" src="{{dribbbleUser.avatar_url}}">
				<span>{{dribbbleUser.name}}, is it you?</span>
			</div>
			<input type="text" class="fld" placeholder="Dribbble username" ng-model="username" required/>
		</div>
		<div class="ngdialog-buttons">
			<button type="submit" class="btn" ng-disabled="!dribbbleUser.name">Connect to dribbble</button>
		</div>
	</form>
</script>

<!-- Error page -->
<script type="text/ng-template" id="errorView">
	<div class="blank-box">
		<div class="error-icon big-icon"></div>
		<h2 class="title">Robot panic.. we are experiencing troubles!</h2>
		<p>Sorry for that. The error is logged and the team is already notified, it will be fixed soon.</p>
	</div>
</script>
